// .vscode/settings.json
{
  // Prettier as default for .js/.jsx
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Prettier as default for .ts/.tsx
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Format on save for all these languages
  "editor.formatOnSave": true,

  // Then ESLint runs to fix any remaining lint‚Äêonly issues
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  }
}
